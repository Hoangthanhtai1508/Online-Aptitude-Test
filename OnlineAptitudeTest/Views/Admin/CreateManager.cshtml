@model OnlineAptitudeTest.Models.AdminManager
@{
    ViewBag.Title = "CreateManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="outer-w3-agile col-xl mt-3 mr-xl-3">
    <h3 class="main-title-w3layouts mb-2 text-center">Create New Manager</h3>
    <hr />
    <div id="content">
        @if (TempData["Username"] != null && (bool)TempData["Username"])
        {
            <p style="color:brown"><span class="timer success">@TempData["statusCC"]</span></p>
        }
        else
        {
            <p style="color:brown"><span class="timer failed">@TempData["statusCC"]</span></p>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            if (ViewBag.error != null)
            {
                <span class="title failed text-danger">@ViewBag.error</span>
            }


            <form action="#" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="font-weight-bold">Username(*)</label>
                        <input type="text" class="form-control" name="Username" pattern="[A-Za-z0-9]{5,30}" title="Username must consist of 5 to 30 characters, number and no special characters" placeholder="Username" required="">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-bold">Password(*)</label>
                        <input type="password" class="form-control" name="Password" pattern="[A-Za-z0-9]{5,40}" title="Password must consist of 5 to 40 characters, number and no special characters" placeholder="Password" required="">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="font-weight-bold">Email address(*)</label>
                        <input type="email" class="form-control" name="Email" placeholder="you@example.com" required="">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-bold">Name(*)</label>
                        <input type="text" class="form-control" name="Name" pattern="[a-zA-Z ]{5,30}$" title="Name must consist of 5 to 30 characters, space and no special characters" placeholder="Name" required="">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="font-weight-bold">Gender</label>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Gender" value="Male" checked="">
                                <label class="form-check-label">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Gender" value="Female">
                                <label class="form-check-label">
                                    Female
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-bold">Birthday(*)</label>
                        <div>
                            <input type="date" name="Birthday" required  class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div  class="form-group col-md-6">
                        <label class="font-weight-bold">Phone(*)</label>
                        <input type="tel" class="form-control" name="Phone" pattern="[0-9]{5,15}" title="Phone consists of 5 to 15 numbers" placeholder="Phone" required="">
                    </div>
                </div>
                <hr />
                <div>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
            <hr />
            <p>
                <a class="btn btn-warning" href="@Url.Action("ManagerList")">Back To List</a>
            </p>
        }

    </div>
</div>