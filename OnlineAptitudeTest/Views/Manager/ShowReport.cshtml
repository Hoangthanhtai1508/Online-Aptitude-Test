
@{
    double PhanTram = 0;
    PhanTram = (double)((double)ViewBag.Passed / (double)ViewBag.Total * 100);
    ViewBag.Title = "ShowReport";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="outer-w3-agile col-xl mt-3 mr-xl-3">
    <h3 class="main-title-w3layouts mb-2 text-center">Report information</h3>
    <div id="content">
        @ViewBag.Null

        <table style="width:40%">
            <tr>
                <td style="width:200px; font-weight:bold">From (MM/dd/yyyy):</td>
                <td>@ViewBag.fromDate</td>
            </tr>
            <tr>
                <td style="width:200px; font-weight:bold">To (MM/dd/yyyy):</td>
                <td>@ViewBag.toDate</td>
            </tr>
            <tr>
                <td style="width:200px; font-weight:bold">Total candidate:</td>
                <td>@ViewBag.Total</td>
            </tr>
            <tr></tr>
            <tr>
                <td style="width:200px; font-weight:bold">Candidate passed:</td>
                <td>@ViewBag.Passed</td>
            </tr>
            <tr></tr>
            <tr>
                <td style="width:200px; font-weight:bold">Pass percent:</td>
                <td>
                    <div class="progress" style="height:20px">
                        <div class="progress-bar" style="width:@String.Format("{0:0}", PhanTram)%">@String.Format("{0:0.00}", PhanTram)%</div>
                    </div>
                </td>
            </tr>

        </table>

        <hr />
        <p>
            <a class="btn btn-warning" href="@Url.Action("Report")">Back</a>
        </p>
    </div>

</div>