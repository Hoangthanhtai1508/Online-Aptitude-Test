@model IEnumerable<OnlineAptitudeTest.Models.Candidate>

@{
    ViewBag.Title = "DeleteCandidateFTC";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="outer-w3-agile col-xl mt-3 mr-xl-3">
    <h3 class="main-title-w3layouts mb-2 text-center">Remove Candidate For Test</h3>
    <div id="content">

        @if (TempData["CandidateID"] != null && (bool)TempData["CandidateID"])
        {
            @TempData["statusCFTC"]
        }
        else
        {
            @TempData["statusCFTC"]
        }






        @using (Html.BeginForm("DeleteCandidateFTC", "Manager", FormMethod.Post))
        {

            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CandidateID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>



                        <th><label class="control-label col-md">Check</label></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CandidateID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>

                        <td>
                            <p>
                                <label>
                                    <input type="checkbox" name="dsxoa" value="@item.CandidateID" />
                                    <span></span>
                                </label>
                            </p>
                        </td>
                    </tr>
                }

            </table>
            <button type="submit" class="btn full-width" value="delete_forever">Remove</button>

        }
        <br />
        <div>
            @Html.ActionLink("Back to List", "TestCode", null, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>